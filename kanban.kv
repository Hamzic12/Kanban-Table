<app_layout>:

    task: task
    days: days

    orientation: 'horizontal'
    
    # the main grid 

    GridLayout:  
        cols: 2
        size: root.width, root.height 

        # grid of 3 parts, the whole table

        GridLayout:  
            id: table_grid_id
            cols: 1
            rows: 3
            
            GridLayout:  # stages for the kanban table
                id: stage_id
                cols: 4
                size_hint_y: 0.11 

                Label:
                    text: "To Do"
                    canvas.before:
                        Color:
                            rgba: 0, 0, 1, 1 
                        Rectangle:
                            pos: self.pos
                            size: self.size
                        Color:
                            rgba: 1, 1, 1, 1
                        Line: # Draw the left border
                            points: [self.x, self.y, self.x, self.y + self.height]
                            width: 2 

                Label:
                    text: "In Progress"
                    canvas.before:
                        Color:
                            rgba: 0, 0, 1, 1  
                        Rectangle:
                            pos: self.pos
                            size: self.size

                        Color:
                            rgba: 1, 1, 1, 1  
                        Line: # Draw the left border
                            points: [self.x, self.y, self.x, self.y + self.height]
                            width: 2
                        Line: # Draw the right border
                            points: [self.x + self.width, self.y, self.x + self.width, self.y + self.height]
                            width: 2

                Label:
                    text: "Testing"
                    canvas.before:
                        Color:
                            rgba: 0, 0, 1, 1  
                        Rectangle:
                            pos: self.pos
                            size: self.size
                        Color:
                            rgba: 1, 1, 1, 1  
                        Line: # Draw the right border
                            points: [self.x + self.width, self.y, self.x + self.width, self.y + self.height]
                            width: 2
                        Line: # Draw the left border
                            points: [self.x, self.y, self.x, self.y + self.height]
                            width: 2

                Label:
                    text: "Done"
                    canvas.before:
                        Color:
                            rgba: 0, 0, 1, 1 
                        Rectangle:
                            pos: self.pos
                            size: self.size
                        Color:
                            rgba: 1, 1, 1, 1  
                        Line: # Draw the right border
                            points: [self.x + self.width - 3, self.y, self.x + self.width - 3, self.y + self.height]
                            width: 2
                        Color:
                            rgba: 1, 1, 1, 1
                        Line: # Draw the left border
                            points: [self.x, self.y, self.x, self.y + self.height]
                            width: 2 

            
            # part for tasks

            RelativeLayout:  
                id: table_id

                Widget:
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1 # White
                        Line:
                            points: [self.x - 5, self.y + self.height, self.x + self.width - 5, self.y + self.height] # Top line
                            width: 2

                        Line:
                            points: [self.x - 5, self.y, self.x + self.width - 5, self.y] # bottom line
                            width: 3
                        
                        Line:  
                            points: [self.x + self.width / 100 - 6, self.y, self.x + self.width / 100 - 6, self.y + self.height] # first line
                            width: 2
                        Line:
                            points: [self.x + self.width / 4, self.y, self.x + self.width / 4, self.y + self.height]  
                            width: 2
                        Line:
                            points: [self.x + self.width / 2, self.y, self.x + self.width / 2, self.y + self.height]  
                            width: 2
                        Line:
                            points: [self.x + 3 * self.width / 4, self.y, self.x + 3 * self.width / 4, self.y + self.height]  # last line
                            width: 2

                        Line:
                            points: [self.x + self.width , self.y, self.x + self.width , self.y + self.height] # Line on the right
                            width: 2 

            # bar showing progress

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '50dp' 

                ProgressBar:
                    id: progress_bar
                    size_hint_x: 1  
                    height: '20dp'
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1 
                        Rectangle:
                            pos: self.pos
                            size: self.size

        GridLayout: # borders
            rows: 3
            size_hint_x: 0.25
            GridLayout:
                size_hint_y: 0.11
                canvas.before:
                    Color:
                        rgba: 0, 0, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                    Color:
                        rgba: 1, 1, 1, 1  
                    Line:
                        points: [self.x, self.y, self.right, self.y] 
                        width: 2

            StackLayout: # user interface
                id: ui_id
                orientation: 'lr-bt'
                spacing : "2 dp"
                padding: [5, 0, 0, 0]
                
                Button:
                    text: "Save"
                    size_hint: 0.5, 0.1
                    on_press: root.save_progress()
                Button:
                    text: "Load"
                    size_hint: 0.5, 0.1
                    on_press: root.load_progress()
                Button:
                    text: "Edit"
                    size_hint: 0.5, 0.1
                    on_press: root.pop_up()

                Button:
                    text: "Clear"
                    size_hint: 0.5, 0.1
                    on_press: root.clear_table()

                Button:
                    text: "Left"
                    size_hint: 0.5, 0.1
                    on_press: root.move_left()

                Button:
                    text: "Right"
                    size_hint: 0.5, 0.1
                    on_press: root.move_right()
                
                Button:
                    text: "Add"
                    size_hint: 0.5, 0.1
                    on_press: root.add_task()
                    disabled: root.disabled_add
                
                Button:
                    text: "Remove"
                    size_hint: 0.5, 0.1
                    on_press: root.delete_task()

                TextInput:
                    id : days
                    hint_text: "Enter the days it will take"
                    multiline: False
                    input_filter: 'int'
                    size_hint: 1, 0.05
                    on_text:
                        if len(self.text.strip()) >= 6: self.readonly = True
                        else: self.readonly = False # Now only 6 ints are allowed
                TextInput:
                    id: task
                    hint_text: "Enter the task"
                    multiline: False
                    size_hint: 1, 0.1
                    on_text:
                        if len(self.text.strip()) >= 18: self.readonly = True
                        else: self.readonly = False # Now only 6 ints are allowed
                Label:
                    text: str(f"Punishment points: {root.bad_points}")
                    font_size: self.width * 0.1
                    size_hint: (1, 0.1)
                Label:
                    text: str(f"Finished tasks: {root.finished}")
                    font_size: self.width * 0.1
                    size_hint: (1, 0.1)
                Label:
                    text: str(f"Number of tasks: {root.task_count}")
                    font_size: self.width * 0.1
                    size_hint: (1, 0.1)
            
            GridLayout: # borders
                size_hint_y: None
                height : "53"
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Line:
                        points: [self.x, self.y, self.x, self.top]
                        width: 2
                
            
<p_edit>: # popup window
    changed_task : new_task
    cols: 1
    rows: 2

    TextInput:
        id : new_task
        hint_text: "Edit the task"
        multiline: False
        on_text:
            if len(self.text.strip()) >= 18: self.readonly = True
            else: self.readonly = False 
    Button:
        text : "Edit"
        on_press: root.edit_task()
            