<app_layout>
    task : task
    sign : label
    GridLayout:
        id : maingrid_id
        cols: 1
        rows: 3
        size : root.width, root.height

        GridLayout:
            id: stage_id
            cols : 4
            Label: 
                text: "To Do"
                canvas.before:
                    Color:
                        rgba: 1, 0, 0, 1  # Red
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label: 
                text: "In Progress"
                canvas.before:
                    Color:
                        rgba: 1, 0, 0, 1  # Red
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label: 
                text: "Testing"
                canvas.before:
                    Color:
                        rgba: 1, 0, 0, 1  # Red
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label: 
                text: "Done"
                canvas.before:
                    Color:
                        rgba: 1, 0, root.color_change, 1  # Red 
                    Rectangle:
                        pos: self.pos
                        size: self.size

        RelativeLayout:
            id: table_id

        GridLayout:
            id: completionbar_id
            cols: 4

            Widget:
                canvas:
                    Color:
                        rgba: 0, 0, 0, 1  # Black 
                    Rectangle:
                        pos: self.pos
                        size: self.size

            Widget:
                canvas:
                    Color:
                        rgba: 0, 0, 0, 1  # Black 
                    Rectangle:
                        pos: self.pos
                        size: self.size

            Widget:
                canvas:
                    Color:
                        rgba: 0, 0, 0, 1  # Black 
                    Rectangle:
                        pos: self.pos
                        size: self.size

            Widget:
                canvas:
                    Color:
                        rgba: 0, 0, 0, 1  # Black 
                    Rectangle:
                        pos: self.pos
                        size: self.size

        
        Label:
            id : label
            text: root.variable
        
        TextInput:
            id: task
            multiline: False
            
        
        Button:
            text: "Press me"
            on_press : root.press_me()