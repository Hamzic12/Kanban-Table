<app_layout>:

    task: task
    days: days

    orientation: 'horizontal'
    
    # the main grid 

    GridLayout:  
        cols: 2
        size: root.width, root.height 

        # grid of 3 parts, the whole table

        GridLayout:  
            id: table_grid_id
            cols: 1
            rows: 3
            
            GridLayout:  # stages for the kanban table
                id: stage_id
                cols: 4
                size_hint_y: 0.11  # Takes 20% of the vertical space
                # Optionally adjust the height proportion based on parent size

                Label:
                    text: "To Do"
                    canvas.before:
                        Color:
                            rgba: 0, 0, 1, 1 
                        Rectangle:
                            pos: self.pos
                            size: self.size
                        Color:
                            rgba: 1, 1, 1, 1
                        Line: # Draw the left border
                            points: [self.x, self.y, self.x, self.y + self.height]
                            width: 2 

                Label:
                    text: "In Progress"
                    canvas.before:
                        Color:
                            rgba: 0, 0, 1, 1  
                        Rectangle:
                            pos: self.pos
                            size: self.size

                        Color:
                            rgba: 1, 1, 1, 1  
                        Line: # Draw the left border
                            points: [self.x, self.y, self.x, self.y + self.height]
                            width: 2
                        Line: # Draw the right border
                            points: [self.x + self.width, self.y, self.x + self.width, self.y + self.height]
                            width: 2

                Label:
                    text: "Testing"
                    canvas.before:
                        Color:
                            rgba: 0, 0, 1, 1  
                        Rectangle:
                            pos: self.pos
                            size: self.size
                        Color:
                            rgba: 1, 1, 1, 1  
                        Line: # Draw the right border
                            points: [self.x + self.width, self.y, self.x + self.width, self.y + self.height]
                            width: 2
                        Line: # Draw the left border
                            points: [self.x, self.y, self.x, self.y + self.height]
                            width: 2

                Label:
                    text: "Done"
                    canvas.before:
                        Color:
                            rgba: 0, 0, 1, 1 
                        Rectangle:
                            pos: self.pos
                            size: self.size
                        Color:
                            rgba: 1, 1, 1, 1  
                        Line: # Draw the right border
                            points: [self.x + self.width - 3, self.y, self.x + self.width - 3, self.y + self.height]
                            width: 2
                        Color:
                            rgba: 1, 1, 1, 1
                        Line: # Draw the left border
                            points: [self.x, self.y, self.x, self.y + self.height]
                            width: 2 

            
            # place for tasks

            RelativeLayout:  
                id: table_id

                # Top border 
                Widget:
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1 # White
                        Line:
                            points: [self.x - 5, self.y + self.height, self.x + self.width - 5, self.y + self.height]
                            width: 2

                # Bottom border 
                Widget:
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1 
                        Line:
                            points: [self.x - 5, self.y, self.x + self.width - 5, self.y]
                            width: 3

                # Vertical lines separating columns (centered)
                Widget:
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1  # White color for the lines
                        Line:  
                            points: [self.x + self.width / 100 - 6, self.y, self.x + self.width / 100 - 6, self.y + self.height] # first line
                            width: 2
                        Line:
                            points: [self.x + self.width / 4, self.y, self.x + self.width / 4, self.y + self.height]  
                            width: 2
                        Line:
                            points: [self.x + self.width / 2, self.y, self.x + self.width / 2, self.y + self.height]  
                            width: 2
                        Line:
                            points: [self.x + 3 * self.width / 4, self.y, self.x + 3 * self.width / 4, self.y + self.height]  # last line
                            width: 2


                # Right-side line 
                Widget:
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1  # White line color
                        Line:
                            points: [self.x + self.width - 5, self.y, self.x + self.width - 5, self.y + self.height]
                            width: 2



            # bar showing progress

            GridLayout:  
                id: progress_id
                cols: 45
                size_hint_y: 0.1  # Takes 30% of the vertical space

                Widget:
                    canvas:
                        Color:
                            rgba: 0, root.f1, 0, 1  # Adjust color dynamically with root.f1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                        Color:
                            rgba: 0, 0, 0, 1  # Border color (black)
                        Line:
                            rectangle: (self.x, self.y, self.width, self.height)
                            width: 1 

                Widget:
                    canvas:
                        Color:
                            rgba: 0, root.f2, 0, 1  # Adjust color dynamically with root.f2
                        Rectangle:
                            pos: self.pos
                            size: self.size
                        Color:
                            rgba: 0, 0, 0, 1  # Border color (black)
                        Line:
                            rectangle: (self.x, self.y, self.width, self.height)
                            width: 1 

                Widget:
                    canvas:
                        Color:
                            rgba: 0, root.f3, 0, 1  # Adjust color dynamically with root.f3
                        Rectangle:
                            pos: self.pos
                            size: self.size
                        Color:
                            rgba: 0, 0, 0, 1  # Border color (black)
                        Line:
                            rectangle: (self.x, self.y, self.width, self.height)
                            width: 1 

                Widget:
                    canvas:
                        Color:
                            rgba: 0, root.f4, 0, 1  # Adjust color dynamically with root.f4
                        Rectangle:
                            pos: self.pos
                            size: self.size
                        Color:
                            rgba: 0, 0, 0, 1  # Border color (black)
                        Line:
                            rectangle: (self.x, self.y, self.width, self.height)
                            width: 1
                Widget:
                    canvas:
                        Color:
                            rgba: 0, root.f5, 0, 1  # Adjust color dynamically with root.f4
                        Rectangle:
                            pos: self.pos
                            size: self.size
                        Color:
                            rgba: 0, 0, 0, 1  # Border color (black)
                        Line:
                            rectangle: (self.x, self.y, self.width, self.height)
                            width: 1 

          # user interface

        StackLayout:
            id: ui_id
            size_hint_x: 0.3  # This is for the horizontal space
            orientation: 'lr-bt'
            spacing : "5 dp"
            
            Button:
                text: "Edit"
                size_hint: 0.5, 0.1
                on_press: root.pop_up()

            Button:
                text: "Clear table"
                size_hint: 0.5, 0.1
                on_press: root.clear_table()

            Button:
                text: "Right"
                size_hint: 0.5, 0.1
                on_press: root.move_right()

            Button:
                text: "Left"
                size_hint: 0.5, 0.1
                on_press: root.move_left()
            
            Button:
                text: "Add"
                size_hint: 0.5, 0.1
                on_press: root.add_task()
                disabled: root.disabled_add
            
            Button:
                text: "Remove"
                size_hint: 0.5, 0.1
                on_press: root.delete_task()

            TextInput:
                id : days
                hint_text: "Enter the days it will take"
                multiline: False
                input_filter: 'int'
                size_hint: 1, 0.05
                on_text:
                    if len(self.text.strip()) >= 6: self.readonly = True
                    else: self.readonly = False # Now only 6 ints are allowed
            TextInput:
                id: task
                hint_text: "Enter the task"
                multiline: False
                size_hint: 1, 0.1
                on_text:
                    if len(self.text.strip()) >= 18: self.readonly = True
                    else: self.readonly = False # Now only 6 ints are allowed

<p_edit>: # popup window
    changed_task : new_task
    cols: 1
    rows: 2

    TextInput:
        id : new_task
        hint_text: "Edit the task"
        multiline: False
        on_text:
            if len(self.text.strip()) >= 18: self.readonly = True
            else: self.readonly = False 
    Button:
        text : "Edit"
        on_press: root.edit_task()
            